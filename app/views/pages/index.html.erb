<style>
.ram a{
	text-decoration:none;
	color: grey;
}

.index-content .ram a{
	width: 100px;
    min-height: 20px;
    border-radius: 4px;
    text-align: center;
    font-weight: lighter;
    margin: 0px 20px 15px 20px;
    padding: 5px 0px;
    display: inline-block;
    opacity: 0.65;
}
.index-content a:hover{
    color:black;
    text-decoration:none;
}

.index-content{
    padding:10px 0px;
    
}


.index-content a{
    color: black;
    text-decoration: none;
}
.index-content .card{
    background-color: #FFFFFF;
    margin-bottom: 20px;
    padding:0px;
    border-radius:20px;
    box-shadow: 0 4px 5px 0 rgba(0,0,0,0.14), 0 1px 10px 0 rgba(0,0,0,0.12), 0 2px 4px -1px rgba(0,0,0,0.3);
}

.index-content .card h4{
    margin:0px;
    text-align: center;
    padding-top: 20px;
}
.index-content .card p{
    margin:15px;
    opacity: 0.65;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }


.index-content .card #ed{
	text-align: right;
	margin-right: 15px;
	opacity: 0.65;
}

.index-content .card #pd{
	margin-left: 15px;
	margin-right: 15px;
    opacity: 0.65;
}
</style>
<div class="ram">
<center><%= link_to "Create new post", new_post_path, class: "btn btn-default" %>
<%= link_to "Show Galery", photos_path, class: "btn btn-default" %></center>

</div>

<div class="index-content">
    <div class="container">
		<% @posts.each do |post| %>
			<div class="col-lg-4">
           		<div class="card">
	           		
	           		<div id="ed"><% if current_user != nil and current_user.id == post.user_id %>
						<%= link_to "Edit",  edit_post_path(post.id) %> or
						<%= link_to "Delete", post_path(post.id), data: {confirm: 'Rili deleted your post?'}, method: :delete %>
					<%end%>
					</div>	

					<h4><%= link_to post.title, post_path(post.id) %></h4>
					<p><i><%= sanitize post.body %></i></p>
					<div id="pd"><%= image_tag post.user.avatar.url(:thumb), width: 30, heigth: 30 %>
					Author: <%= post.user.nickname %> |
					<span class="glyphicon glyphicon-time"></span> 
					<%= post.created_at %></div>
					<div class="ram">
						<center><%= link_to "Read more", post_path(post.id), class: "btn btn-default" %></center>
					</div>
				</div>
 			</div>
		<%end%>
	</div>
</div>
	
					