<style >
 #pd{
	margin-left: 15px;
	margin-right: 15px;
}
.silk a{
	text-decoration: none;
	color: grey;
}
</style>
<div class='silk'>
<center><%= link_to "New Photo", new_photo_path, class: "btn btn-default" %>
<%= link_to "New Multi Photo", new_image_path, class: "btn btn-default" %></center>
</div>
<br>
<% if @images == [] %>
<center><h1>Photo ninchen</h1></center>
	<% else %>
	<div class="container">
		<% @images.each do |image| %>
		<div class="col-lg-6">
			<p><div id="pd"><%= image_tag image.user.avatar.url(:thumb), width: 30, heigth: 30 %><%= image.user.nickname %></p>
					</div>	
			<p><%= image_tag(image.image.url) %></p>
			<% if current_user != nil and current_user.id == image.user_id %>
				<%= link_to "Edit",  edit_image_path(image.id) %> or
				<%= link_to "Delete", image_path(image.id), data: {confirm: 'Rili deleted your post?'}, method: :delete %>
			<%end%>
			<hr>
		</div>

		<% end %>
	</div>
<% end %>